{
  "appId": "com.resumematcher.app",
  "productName": "Resume Matcher",
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "asar": true,
  "asarUnpack": [
    "apps/frontend/**/*",
    "apps/backend/**/*"
  ],
  "files": [
    "electron/**/*",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "apps/frontend/.next/standalone",
      "to": "app.asar.unpacked/apps/frontend/.next/standalone",
      "filter": ["**/*"]
    },
    {
      "from": "apps/frontend/.next/static",
      "to": "app.asar.unpacked/apps/frontend/.next/static",
      "filter": ["**/*"]
    },
    {
      "from": "apps/frontend/public",
      "to": "app.asar.unpacked/apps/frontend/public",
      "filter": ["**/*"]
    },
    {
      "from": "dist-backend/node-bin/node",
      "to": "node",
      "filter": ["**/*"]
    },
    {
      "from": "dist-backend",
      "to": "backend-bin",
      "filter": ["**/*", "!node-bin/**/*"]
    },
    {
      "from": "apps/backend",
      "to": "backend",
      "filter": [
        "!.git",
        "!.pytest_cache",
        "!__pycache__",
        "!*.pyc",
        "!venv",
        "!.venv",
        "!.env",
        "!tests"
      ]
    },
    {
      "from": "assets",
      "to": "assets"
    }
  ],
  "afterPack": "./scripts/after-pack.js",
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Resume Matcher"
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "category": "public.app-category.productivity",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist",
    "identity": null
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Office",
    "icon": "assets/icon.png",
    "maintainer": "Ben McKallip <bmckallip@me.com>"
  },
  "deb": {
    "depends": []
  },
  "appImage": {
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  }
}
